{
	"name": "autover",
	"version": "0.0.0",
	"private": true,
	"description": "A project with a CLI tool and VSCode extension",
	"author": {
		"name": "dpaulos6",
		"email": "dpaulos6@outlook.com",
		"url": "https://dpaulos6.com/"
	},
	"scripts": {
		"build:cli": "tsc -p ./cli/tsconfig.json",
		"build:extension": "tsc -p ./extension/tsconfig.json",
		"build": "pnpm run build:cli && pnpm run build:extension",
		"dev:cli": "ts-node -r tsconfig-paths/register ./cli/src/index.ts",
		"dev:extension": "code --extensionDevelopmentPath=./extension"
	},
	"devDependencies": {
		"typescript": "^5.7.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "^4.0.0"
	},
	"packageManager": "pnpm@9.15.4"
}
