{
	"name": "dpaulos6-autover",
	"displayName": "@dpaulos6/autover",
	"description": "An extension to automate version bumps",
	"version": "0.0.1",
	"author": {
		"name": "dpaulos6",
		"email": "dpaulos6@outlook.com",
		"url": "https://dpaulos6.com/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dpaulos6/autover"
	},
	"homepage": "https://github.com/dpaulos6/autover#readme",
	"bugs": {
		"url": "https://github.com/dpaulos6/autover/issues"
	},
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "autover.bumpMajor",
				"title": "Bump Major Version"
			},
			{
				"command": "autover.bumpMinor",
				"title": "Bump Minor Version"
			},
			{
				"command": "autover.bumpPatch",
				"title": "Bump Patch Version"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "pnpm run package",
		"compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^8.17.0",
		"@typescript-eslint/parser": "^8.17.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"esbuild": "^0.24.0",
		"eslint": "^9.16.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.7.2"
	},
	"packageManager": "pnpm@9.15.4",
	"dependencies": {
		"@dpaulos6/autover": "^1.1.2"
	}
}
